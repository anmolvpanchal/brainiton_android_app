<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F4FA"
    tools:context=".main.ActivityDemoResult">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/ic_app_logo_accent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"

                        android:src="@drawable/medal"/>

                    <TextView
                        android:id="@+id/tvTotalScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23,456"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/colorTextPrimaryDark"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your score"
                        android:fontFamily="@font/raleway_light"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center_horizontal"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent"
                        android:layout_marginTop="10dp"/>

                    <!-- Top and average score-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <!--Top score -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="43,343"
                                android:fontFamily="@font/raleway_bold"
                                android:textSize="@dimen/_20ssp"
                                android:textColor="@color/colorTextPrimaryDark"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Top score"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/raleway_light"
                                android:gravity="center_horizontal"/>


                        </LinearLayout>

                        <!-- Average score-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="14,865"
                                android:fontFamily="@font/raleway_bold"
                                android:textSize="@dimen/_20ssp"
                                android:textColor="@color/colorTextPrimaryDark"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Average score"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/raleway_light"
                                android:gravity="center_horizontal"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Accuracy"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorAccent"/>

                    <!-- Accuracy -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/tvAccuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="79%"
                                android:fontFamily="@font/raleway_bold"
                                android:textColor="@color/colorTextPrimaryDark"
                                android:textSize="@dimen/_15ssp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" of total answers correct"
                                android:layout_toRightOf="@id/tvAccuracy"
                                android:fontFamily="@font/raleway_medium"
                                android:textColor="@color/colorTextPrimaryDark"
                                android:textSize="@dimen/_15ssp"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Answer feedback-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/demo_result_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <!-- Left button-->
                        <ImageButton
                            android:id="@+id/leftButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/ic_left_arrow"
                            android:padding="@dimen/_5sdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginLeft="@dimen/_10sdp"/>

                        <!-- Right button-->
                        <ImageButton
                            android:id="@+id/rightButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_right_arrow"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginRight="@dimen/_10sdp"/>

                        <!-- Question count-->
                        <TextView
                            android:id="@+id/questionCount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:textSize="@dimen/_15ssp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <!-- Question -->
                    <TextView
                        android:id="@+id/question_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:maxLines="3"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:textColor="@color/colorTextPrimaryDark"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/raleway_medium" />

                    <!-- Answer -->
                    <TextView
                        android:id="@+id/correct_option_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_gravity="center_horizontal"
                        android:text="Correct answer"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/colorTextPrimaryDark"
                        android:drawableLeft="@drawable/ic_green_check_mark"
                        android:drawablePadding="@dimen/_10sdp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!-- Challange friend button-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:clickable="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_gravity="center_horizontal"
                        android:text="Challange Friend"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/colorTextPrimaryDark"
                        android:fontFamily="@font/raleway_medium"
                        android:drawableLeft="@drawable/ic_swords"
                        android:drawablePadding="15dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Replay and close-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp">

                <!-- Replay -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_20sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/play_again_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Replay"
                                android:fontFamily="@font/raleway_medium"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textAllCaps="true"
                                android:textColor="@color/colorTextPrimaryDark"
                                android:textSize="@dimen/_20ssp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Done -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_20sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Done"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/raleway_medium"
                                android:textAllCaps="true"
                                android:textColor="@color/colorTextPrimaryDark"
                                android:textSize="@dimen/_20ssp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>