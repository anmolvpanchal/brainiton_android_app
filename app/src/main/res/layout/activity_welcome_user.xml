<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.ActivitySignUp">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_app_logo_accent" />

    <!--@color/colorOtpError-->
    <Button
        android:id="@+id/btnLetsGo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_rounded_button"
        android:text="@string/text_let_s_go"
        style="@style/ThemeTextViewH1Light"
        android:layout_marginBottom="32dp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tvWelcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/btnLetsGo"
        android:text="@string/welcome_user"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>