    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".normalQuiz.ActivityNormalQuizResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="11">

        <LinearLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/trophy"
                    android:layout_width="156dp"
                    android:layout_height="156dp"
                    android:layout_above="@id/main_content"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="16dp"
                    android:src="@drawable/ic_trophy"
                    tools:ignore="ContentDescription" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/main_content"
                    style="@style/ThemeCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/accuracy_and_score_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:weightSum="2">

                            <TextView
                                style="@style/ThemeTextViewH1Light"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/text_final_score" />

                            <TextView
                                style="@style/ThemeTextViewH1Light"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/text_accuracy" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="16dp"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tvTotalScore"
                                style="@style/ThemeTextViewH1Dark"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tvAccuracy"
                                style="@style/ThemeTextViewH1Dark"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/normal_quiz_play_again_button"
                    style="@style/ThemeTextViewH1Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_button"
                    android:drawableStart="@drawable/ic_refresh"
                    android:paddingStart="16dp"
                    android:text="@string/text_play_again"
                    android:textAllCaps="false"
                    tools:ignore="RtlSymmetry"
                    />

            </RelativeLayout>

