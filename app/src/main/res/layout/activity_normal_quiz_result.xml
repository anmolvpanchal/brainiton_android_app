                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="@font/raleway_bold"
                            android:gravity="center"
                            android:text="Question"
                            android:textColor="#000" />

                        <ImageButton
                            android:id="@+id/result_Cell_right_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#fff"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="6"
                        android:layout_below="@id/top_bar"
                        >

                    <TextView
                        android:id="@+id/question_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="center"
                        android:text="question will be shown here"
                        android:textColor="#000"
                        android:textSize="22dp"

                        />

                    <TextView
                        android:id="@+id/correct_option_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_below="@id/question_layout"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_green_check_mark"
                        android:drawableRight="@drawable/ic_speaker"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="22dp"
                        />


                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>




