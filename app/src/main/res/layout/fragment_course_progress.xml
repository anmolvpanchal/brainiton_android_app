<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CourseProgressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="3"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/results_text"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:id="@+id/donut_accuracy"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            app:donut_finished_color="#01ad87"
                            app:donut_finished_stroke_width="@dimen/_10sdp"
                            app:donut_max="100"
                            app:donut_progress="75"
                            app:donut_text_color="@color/black"
                            app:donut_unfinished_color="#ffa600" />

                        <TextView
                            android:id="@+id/avgaccuracy_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/raleway_regular"
                            android:padding="@dimen/_3sdp"
                            android:text="Avg Accuracy"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />


<!--
                        <com.ramijemli.percentagechartview.PercentageChartView
                            android:id="@+id/avgaccuracy_chart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/avgaccuracy_text"
                            android:layout_margin="@dimen/_9sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:pcv_animDuration="500"
                            app:pcv_backgroundBarColor="#ffa600"
                            app:pcv_backgroundBarThickness="@dimen/_15sdp"
                            app:pcv_mode="ring"
                            app:pcv_orientation="clockwise"
                            app:pcv_progress="75"
                            app:pcv_progressBarStyle="round"
                            app:pcv_progressBarThickness="@dimen/_15sdp"
                            app:pcv_progressColor="#01ad87"
                            app:pcv_startAngle="0"
                            app:pcv_textColor="#000"
                            app:pcv_textSize="@dimen/_17ssp"
                            app:pcv_textStyle="bold">

                        </com.ramijemli.percentagechartview.PercentageChartView>


-->


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/curentrank_text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:fontFamily="@font/raleway_light"
                            android:text="12"
                            android:textAlignment="center"
                            android:textSize="@dimen/_65ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/curentrank_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/raleway_regular"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Current Rank"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />


                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/results_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/raleway_regular"
                    android:padding="@dimen/_3sdp"
                    android:text="Results"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="3"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/progress_text"
                    android:orientation="horizontal"
                    android:weightSum="9">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/Totallessons_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_regular"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="Total lessons"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:id="@+id/unlocked_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_regular"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="Unlocked"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:id="@+id/Attempted_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_regular"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="Attempted"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />


                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/completion_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/raleway_regular"
                            android:padding="@dimen/_5sdp"
                            android:text="Completion"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:id="@+id/donut_completion"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            app:donut_max="100"
                            app:donut_finished_color="#feccff"
                            app:donut_unfinished_color="#cd66ff"
                            app:donut_finished_stroke_width="@dimen/_10sdp"
                            app:donut_text_color="@color/black"
                            app:donut_progress="25"
                            />


                        <!--
                                                <com.ramijemli.percentagechartview.PercentageChartView
                                                    android:id="@+id/completion_chart"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_above="@id/completion_text"
                                                    android:layout_margin="@dimen/_9sdp"
                                                    android:layout_marginBottom="@dimen/_10sdp"
                                                    app:pcv_animDuration="500"
                                                    app:pcv_backgroundBarColor="#cd66ff"
                                                    app:pcv_backgroundBarThickness="@dimen/_15sdp"
                                                    app:pcv_mode="ring"
                                                    app:pcv_orientation="clockwise"
                                                    app:pcv_progress="25"
                                                    app:pcv_progressBarStyle="round"
                                                    app:pcv_progressBarThickness="@dimen/_15sdp"
                                                    app:pcv_progressColor="#feccff"
                                                    app:pcv_startAngle="270"
                                                    app:pcv_textColor="#000"
                                                    app:pcv_textSize="@dimen/_17ssp"
                                                    app:pcv_textStyle="bold">

                                                </com.ramijemli.percentagechartview.PercentageChartView>
                        -->


                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/raleway_regular"
                    android:padding="@dimen/_3sdp"
                    android:text="Progress"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_regular"
                android:text="Show Leaderbord"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>