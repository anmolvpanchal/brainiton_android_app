<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#7586CB"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvPollQue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#FFF"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Poll Question" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/ivRadioOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_radio_button"/>
        <TextView
            android:id="@+id/optionOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivRadioOne"
            android:layout_toLeftOf="@+id/optionOnePercent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Poll Question" />
        <TextView
            android:id="@+id/optionOnePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="38%"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/ivRadioTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_radio_button"/>
        <TextView
            android:id="@+id/optionTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivRadioTwo"
            android:layout_toLeftOf="@+id/optionTwoPercent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Poll Question" />
        <TextView
            android:id="@+id/optionTwoPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="38%"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/ivRadioThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_radio_button"/>
        <TextView
            android:id="@+id/optionThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivRadioThree"
            android:layout_toLeftOf="@+id/optionThreePercent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Poll Question" />
        <TextView
            android:id="@+id/optionThreePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="38%"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/ivRadioFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_radio_button"/>
        <TextView
            android:id="@+id/optionFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivRadioFour"
            android:layout_toLeftOf="@+id/optionFourPercent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Poll Question" />
        <TextView
            android:id="@+id/optionFourPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="38%"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

</LinearLayout>