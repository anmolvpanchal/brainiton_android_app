<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_featured"
    style="@style/ThemeCardViewFeaturedQuizToday"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:layout_height="@dimen/card_view_height_featured_quiz_today"
    tools:ignore="NewApi">

    <!--Quiz image is set as background of this layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_featured_quiz_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ThemeBackgroundFade">

            <!--quiz name-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_featured_quiz_name"
                style="@style/ThemeTextViewH1Light"
                android:textSize="24sp"/>

            <!--Quiz sponsor name-->
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_featured_quiz_sponsor_name"
                style="@style/ThemeTextViewH2Light" />


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

