<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ActivityPlanSelect">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/top_layout_planselect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F4FA">


            <ImageView
                android:id="@+id/logo_Image"
                android:layout_width="@dimen/logo_weidth_plan_select"
                android:layout_height="@dimen/logo_height_plan_select"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_app_logo_accent" />

            <ImageView
                android:id="@+id/phoneScreen_Image"
                android:layout_width="@dimen/phoneimage_weidth_plan_select"
                android:layout_height="@dimen/phoneimage_height_plan_select"
                android:layout_below="@id/logo_Image"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/plan_select_image" />

            <LinearLayout
                android:id="@+id/seperation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_button"
                android:layout_marginLeft="@dimen/margin50dp_plan_select"
                android:layout_marginTop="@dimen/margin15dp_plan_select"
                android:layout_marginRight="@dimen/margin50dp_plan_select"
                android:layout_marginBottom="@dimen/margin15dp_plan_select"
                android:orientation="horizontal"
                android:weightSum="4">
                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:text=" OR SUBSCRIBE FROM HERE "
                    android:textAlignment="center"
                    android:textSize="@dimen/seperation_text8sp_plan_select" />


                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#000" />


            </LinearLayout>

<!--            cards view-->
            <LinearLayout
                android:id="@+id/cards_view_plan_selection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardsmain_view_height_plan_select"
                android:layout_below="@id/seperation_view"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin15dp_plan_select"
                android:layout_marginRight="@dimen/margin15dp_plan_select"
                android:paddingLeft="@dimen/margin25dp_plan_select"
                android:paddingRight="@dimen/margin25dp_plan_select"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >

                <androidx.cardview.widget.CardView
                    android:id="@+id/firstcard_plan_select"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/singlecard_height_plan_select"
                    android:layout_marginLeft="@dimen/margin15dp_plan_select"
                    android:layout_marginRight="@dimen/margin15dp_plan_select"
                    android:layout_marginBottom="@dimen/margin10dp_plan_select"
                    android:layout_marginTop="@dimen/margin5dp_plan_select"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#f4f4f4"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:text="3\nMONTHS"
                            android:textAlignment="center"
                            android:paddingTop="@dimen/cardtext_padding_plan_select"
                            android:textSize="@dimen/cardtext_size_plan_select" />

                        <TextView
                            android:id="@+id/cardone_bottomtext_planselect"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:fontFamily="@font/raleway_medium"
                            android:lineSpacingExtra="@dimen/margin5dp_plan_select"
                            android:textAlignment="center"
                            android:paddingTop="@dimen/cardtext_padding_plan_select"
                            android:textSize="@dimen/botomcardt_text_size_plan_select" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                <androidx.cardview.widget.CardView
                    android:id="@+id/secondcard_plan_select"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/singlecard_height_plan_select"
                    android:layout_marginLeft="@dimen/margin15dp_plan_select"
                    android:layout_marginRight="@dimen/margin15dp_plan_select"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/margin10dp_plan_select"
                    android:layout_marginTop="@dimen/margin5dp_plan_select"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#E8FAFA"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:text="12\nMONTHS"
                            android:textAlignment="center"
                            android:paddingTop="@dimen/cardtext_padding_plan_select"
                            android:textSize="@dimen/cardtext_size_plan_select" />

                        <TextView
                            android:id="@+id/cardtwo_bottomtext_planselect"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:fontFamily="@font/raleway_medium"
                            android:lineSpacingExtra="@dimen/margin5dp_plan_select"
                            android:textAlignment="center"
                            android:paddingTop="@dimen/cardtext_padding_plan_select"
                            android:textSize="@dimen/botomcardt_text_size_plan_select" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/edittext_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_plan_select"
                android:layout_below="@+id/description_selectPlan"
                android:layout_marginLeft="@dimen/margin50dp_plan_select"
                android:layout_marginTop="@dimen/margin10dp_plan_select"
                android:layout_marginRight="@dimen/margin50dp_plan_select"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#FFF"
                android:elevation="@dimen/margin10dp_plan_select">


                <EditText
                    android:id="@+id/enter_subscription_code_eittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Bought subscription code? Enter here"
                    android:paddingLeft="@dimen/margin10dp_plan_select"
                    android:textSize="@dimen/edittext_textsize_plan_select" />

                <ImageButton
                    android:id="@+id/nextbutton_plan_select"
                    android:layout_width="@dimen/editext_button_plan_select"
                    android:layout_height="@dimen/editext_button_plan_select"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/circle_planselect"
                    android:src="@drawable/ic_arrow_forward_white_24dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/description_selectPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_selectPlan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin7dp_plan_select"
                android:fontFamily="@font/raleway_medium"
                android:padding="@dimen/margin5dp_plan_select"
                android:text="Premium content,daily lessons,\n competition pass, online support \n                 and much more !"
                android:textColor="#A4000000"
                android:textSize="@dimen/descriptionext_size_plan_select" />


            <TextView
                android:id="@+id/title_selectPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneScreen_Image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin10dp_plan_select"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/your_benefits_include"
                android:textColor="#000"
                android:textSize="@dimen/titletext_size_plan_select" />


            <Button
                android:id="@+id/continue_button_plan_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_below="@+id/cards_view_plan_selection"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#484AA1"
                android:textColor="#fff"
                android:textSize="@dimen/titletext_size_plan_select"
                android:layout_marginTop="@dimen/margin10dp_plan_select"
                android:layout_marginLeft="@dimen/margin40dp_plan_select"
                android:layout_marginRight="@dimen/margin40dp_plan_select"
                android:fontFamily="@font/raleway_medium"/>

            <TextView
                android:id="@+id/terms_and_condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Condition"
                android:fontFamily="@font/raleway_light"
                android:layout_below="@+id/continue_button_plan_select"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin15dp_plan_select"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>