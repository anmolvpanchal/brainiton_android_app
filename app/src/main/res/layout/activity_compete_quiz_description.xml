<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".competeModule.ActivityCompeteQuizDescription">

    <ScrollView
        android:id="@+id/compete_quiz_description_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp">

                <!--Quiz Image-->
                <ImageView
                    android:id="@+id/compete_quiz_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <!--Top bar-->
                <RelativeLayout
                    android:id="@+id/top_bar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:focusable="true"
                    tools:ignore="NewApi,UnusedAttribute">

                    <!--Top bar cancle button-->
                    <ImageView
                        android:id="@+id/top_bar_search_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="16dp"
                        android:foreground="@drawable/effect_ripple"
                        android:src="@drawable/ic_close_white"
                        tools:ignore="ContentDescription,NewApi,RtlHardcoded" />

                </RelativeLayout>

                <LinearLayout
                    style="@style/ThemeBackgroundFade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:paddingBottom="10dp">

                    <!--quiz name-->
                    <TextView
                        android:id="@+id/compete_quiz_name"
                        style="@style/ThemeTextViewH1Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp" />

                    <!--sponsor name and image-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">

                        <!--sponsor name -->
                        <ImageView
                            android:id="@+id/compete_quiz_sponsor_image"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            tools:ignore="ContentDescription" />

                        <!--sponsor image-->
                        <TextView
                            android:id="@+id/compete_quiz_sponsor_name"
                            style="@style/ThemeTextViewH2Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/compete_quiz_sponsor_image"
                            tools:ignore="RelativeOverlap,RtlHardcoded" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                style="@style/ThemeCardView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_rounded_edit_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="DisableBaselineAlignment">

                    <!--Registered users-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_registered_users"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_person"
                            tools:ignore="ContentDescription,RtlHardcoded" />

                        <TextView
                            android:id="@+id/count_of_registered_users"
                            style="@style/ThemeTextViewH3Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/image_registered_users"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                    </RelativeLayout>

                    <!--count of total questions-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_tota"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_questions"
                            tools:ignore="ContentDescription,RtlHardcoded" />

                        <TextView
                            android:id="@+id/count_of_total_question"
                            style="@style/ThemeTextViewH3Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/image_tota"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            style="@style/ThemeTextViewH3Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:layout_toEndOf="@+id/count_of_total_question"
                            android:text="@string/text_questions"
                            tools:ignore="RtlHardcoded" />

                    </RelativeLayout>

                    <!--count of total seats-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgTotalFav"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_seat"
                            tools:ignore="ContentDescription,RtlHardcoded" />

                        <TextView
                            android:id="@+id/count_of_total_seats"
                            style="@style/ThemeTextViewH3Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgTotalFav"
                            tools:ignore="RtlHardcoded" />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/label"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="15dp">

                        <!--straight line-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorAccentDark" />

                        <!--tab indicator-->
                        <TextView
                            style="@style/ThemeTextViewH2Light"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_tab_bottom_selected"
                            android:padding="8dp"
                            android:text="@string/text_details"
                            android:textAlignment="center"
                            tools:ignore="RelativeOverlap" />

                        <!--commencement date-->
                        <TextView
                            android:id="@+id/compete_quiz_date"
                            style="@style/ThemeTextViewH3Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:paddingRight="4dp"
                            tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/label"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp">

                        <!--statix text description-->
                        <TextView
                            android:id="@+id/tvLblDescription"
                            style="@style/ThemeTextViewH2Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_description" />

                        <!--quiz description-->
                        <TextView
                            android:id="@+id/compete_quiz_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvLblDescription"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/raleway_regular"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        style="@style/ThemeCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:ignore="RtlHardcoded">

                        <!--Register Button-->
                        <RelativeLayout
                            android:id="@+id/compete_quiz_register_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:paddingStart="16dp"
                            android:paddingLeft="16dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="8dp"
                            tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">

                            <ImageView
                                android:id="@+id/imgPlay"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_person_register"
                                tools:ignore="ContentDescription" />

                            <TextView
                                style="@style/ThemeTextViewH2Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imgPlay"
                                android:text="@string/ic_register" />

                        </RelativeLayout>

                        <!--Join button-->
                        <RelativeLayout
                            android:id="@+id/compete_quiz_join_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:paddingStart="16dp"
                            android:paddingLeft="16dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="8dp"
                            android:visibility="gone"
                            tools:ignore="UnusedAttribute">

                            <ImageView
                                android:id="@+id/imgjoin"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_person_join"
                                tools:ignore="ContentDescription" />

                            <TextView
                                style="@style/ThemeTextViewH2Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@id/imgjoin"
                                android:text="@string/text_join"
                                tools:ignore="RelativeOverlap" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>