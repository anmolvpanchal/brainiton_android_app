<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Card numbers -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/circle_shape" />


            <TextView
                android:id="@+id/lessons_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/raleway_medium"
                android:textSize="20sp" />

            <!-- Upper Line -->
            <View
                android:id="@+id/upper_line"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_above="@id/background"
                android:layout_centerHorizontal="true"
                android:background="#2B4E67EB" />

            <!-- Lower line -->
            <View
                android:id="@+id/lower_line"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_below="@id/background"
                android:layout_centerHorizontal="true"
                android:background="#2B4E67EB" />

            <!-- Right line -->
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_toRightOf="@id/background"
                android:layout_centerInParent="true"
                android:background="#2B4E67EB" />-->

        </RelativeLayout>

    </LinearLayout>

    <!-- CardView -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_weight="3.5"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/my_quizzes_list_item_main_container"
                style="@style/ThemeCardViewMyQuizzes"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/cvMainContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/my_quizzes_quiz_image"
                        android:layout_width="124dp"
                        android:layout_height="124dp"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/my_quizzes_quiz_image"
                        android:layout_toRightOf="@+id/my_quizzes_quiz_image"
                        android:padding="10dp"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:id="@+id/my_quizzes_quiz_name"
                            style="@style/ThemeTextViewH2Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3" />

                        <TextView
                            android:id="@+id/my_quizzes_quiz_sponsor"
                            style="@style/ThemeTextViewH3Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>


