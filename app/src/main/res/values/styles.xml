<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--app theme for full screen activity-->
    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="windowNoTitle">true</item>
        <item name="android:animateFirstView">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--app theme for normal activities-->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="windowNoTitle">true</item>
        <item name="android:animateFirstView">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="CustomActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!--Base card view theme-->
    <style name="ThemeCardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:foreground">@drawable/effect_ripple</item>
    </style>

    <style name="ThemeCardViewQuizImage" parent="ThemeCardView">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">0dp</item>

    </style>

    <style name="ThemeCardViewQuestionOptions" parent="ThemeCardView">
        <item name="android:layout_marginStart" tools:ignore="NewApi">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ThemeCardViewQuizInstruction" parent="ThemeCardView">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ThemeCardViewSearchSuggestion" parent="ThemeCardView">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ThemeCardViewSearchBar" parent="ThemeCardView">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--card view theme for category list item-->
    <style name="ThemeCardViewCategory" parent="ThemeCardView"></style>

    <!--card view theme for previous fetured quiz list item -->
    <style name="ThemeCardViewFeaturedQuizPrevious" parent="ThemeCardView">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--card view theme for today's featured quiz-->
    <style name="ThemeCardViewFeaturedQuizToday" parent="ThemeCardView">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--card view theme for my quizzes list item-->
    <style name="ThemeCardViewMyQuizzes" parent="ThemeCardView">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--card view theme for compete quiz list-->
    <style name="ThemeCardViewCompeteQuiz" parent="ThemeCardView">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--card view theme for profile settings -->
    <style name="ThemeCardViewProfileOptions" parent="ThemeCardView">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--background fade style for quiz name on card view-->
    <style name="ThemeBackgroundFade">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">80dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/gradient_background_fade_bottom_top</item>
    </style>

    <!--Text view theme heading 1 light coloured-->
    <style name="ThemeTextViewH1Light">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textColor">@color/colorTextPrimaryLight</item>
    </style>

    <!--Text View theme heading 2 light coloured-->
    <style name="ThemeTextViewH2Light" parent="ThemeTextViewH1Light">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <!--Text View theme heading 3 light coloured-->
    <style name="ThemeTextViewH3Light" parent="ThemeTextViewH2Light">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <!--Text View theme heading 3 dark coloured-->
    <style name="ThemeTextViewH4Light" parent="ThemeTextViewH3Light">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextSecondaryDark</item>
    </style>

    <!--Text view theme heading 1 dark coloured-->
    <style name="ThemeTextViewH1Dark" parent="ThemeTextViewH1Light">
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
    </style>

    <!--Text View theme heading 2 dark coloured-->
    <style name="ThemeTextViewH2Dark" parent="ThemeTextViewH2Light">
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
    </style>

    <!--Text View theme heading 3 dark coloured-->
    <style name="ThemeTextViewH3Dark" parent="ThemeTextViewH3Light">
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
    </style>

    <!--Text View theme heading 3 dark coloured-->
    <style name="ThemeTextViewH4Dark" parent="ThemeTextViewH4Light">
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
    </style>

    <style name="TextLink" parent="ThemeTextViewH2Dark">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:foreground">@drawable/effect_ripple</item>
    </style>

    <style name="ButtonLeftSideRounded" parent="ButtonNormal">
        <item name="android:background">@drawable/shape_rounded_button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>